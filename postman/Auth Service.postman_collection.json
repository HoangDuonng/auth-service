    "item": [
        {
            "name": "Login",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"username\": \"nguyen_van_anh\",\n    \"password\": \"password123\"\n}"
                },
                "url": {
                    "raw": "http://localhost:8081/api/auth/login",
                    "protocol": "http",
                    "host": [
                        "localhost"
                    ],
                    "port": "8081",
                    "path": [
                        "api",
                        "auth",
                        "login"
                    ]
                },
                "description": "Login with username and password"
            }
        },
        {
            "name": "Refresh Token",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"refreshToken\": \"{{refreshToken}}\"\n}"
                },
                "url": {
                    "raw": "http://localhost:8081/api/auth/refresh",
                    "protocol": "http",
                    "host": [
                        "localhost"
                    ],
                    "port": "8081",
                    "path": [
                        "api",
                        "auth",
                        "refresh"
                    ]
                },
                "description": "Get new access token using refresh token"
            }
        },
        {
            "name": "Get Current User",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{accessToken}}"
                    }
                ],
                "url": {
                    "raw": "http://localhost:8080/api/users/me",
                    "protocol": "http",
                    "host": [
                        "localhost"
                    ],
                    "port": "8080",
                    "path": [
                        "api",
                        "users",
                        "me"
                    ]
                },
                "description": "Get current user info using access token"
            }
        }
    ],
